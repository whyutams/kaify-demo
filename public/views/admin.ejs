    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>

    <style>
        * {
            scroll-behavior: smooth;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: rgb(10, 10, 10);
            /* background: linear-gradient(30deg, rgba(10, 10, 10, 0.113), rgba(49, 0, 8, 0.022)); */
        }

        .logo-text {
            background: linear-gradient(90deg, #7f1d1d, #f43f5e);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .logo-shadow {
            text-shadow: 2px 2px 10px rgba(127, 29, 29, 0.5), 2px 2px 15px rgba(244, 63, 94, 0.5);
        }

        .photo-container {
            position: relative;
            overflow: hidden;
        }

        .photo-aura {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: radial-gradient(circle, rgba(244, 63, 94, 0.5), rgba(244, 63, 94, 0) 70%);
            z-index: 0;
            filter: blur(20px);
        }

        .photo {
            position: relative;
            z-index: 1;
            filter: saturate(0.5) contrast(1.2);
        }

        .project-card {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            padding: 20px;
            transition: transform 0.3s;
        }

        .project-card:hover {
            transform: translateY(-5px);
        }

        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.7);
        }

        .modal-content {
            background-color: #222;
            margin: 15% auto;
            padding: 20px;
            border: 1px solid #888;
            border-radius: 10px;
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

        .close:hover,
        .close:focus {
            color: white;
            text-decoration: none;
            cursor: pointer;
        }

        @media (min-width: 1024px) {
            body {
                background: linear-gradient(30deg, rgba(10, 10, 10) 70%, rgba(202, 27, 27, 0.696) 350%);
                background-size: 125%;
                animation-duration: 2s;
                animation-name: anim1;
            }
        }

        @media (max-width: 768px) {

            [data-aos="fade-right"],
            [data-aos="fade-left"] {
                transform: translateX(0) !important;
                overflow: hidden;
            }
        }

        @keyframes anim1 {
            0% {
                background-position: -100px;
            }

            100% {
                background-position: 0px;
            }
        }
    </style>
</head>

<body class="text-gray-300 min-h-screen">
